var screenStreamer = require('screen-streamer');
var fs = require('fs');
var fileIndex = 0;

screenStreamer({
	width: 1024,
	height: 768,
	fps: 1,
	duration: 10
}, function(err, data){
  if (err) throw err;
  
  fs.writeFile('screenshot_' + fileIndex++ + '.png', data, function (err) {
    if (err) throw err;
  });
});
