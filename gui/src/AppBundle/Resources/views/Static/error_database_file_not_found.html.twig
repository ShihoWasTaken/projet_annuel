{% extends '::base.html.twig' %}

{% block title %}
    {{ parent() }} | Erreur - Fichier SQLite manquant
{% endblock title %}

{% block body %}
    <div class="container">
        <br>
        <br>
        <br>
        <br>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="panel panel-danger">
                    <div class="panel-heading">
                        <h3 class="text-center">
                            <i class="fa fa-frown-o" aria-hidden="true"></i> <b>Fichier SQLite non trouvé</b>
                        </h3>
                    </div>
